<div class="container p-4">
    <div class="row">

        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    </br>
                    <p class="m-2">Añadir empleado</p>
                    </br>
                    <a href="/add" class="btn btn-primary">Añadir</a>
                </div>
            </div>
        </div>

        {{#each LINKS}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <p class="m-2"> {{id}}</p>
                        <p class="m-2"> {{name}}</p>
                        <p class="m-2"> {{salary}}</p>
                        <a href="/delete/{{id}}" class="btn btn-danger" >Borrar</a>
                        <a href="/edit/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay registros en La Tabla</p>
