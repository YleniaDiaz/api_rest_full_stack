<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/{{links.id}}" method="POST">
                       <div class="form-group">
                           <input type="text"  value="{{links.name}}" class="form-control" name="nombre" placeholder="nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{links.salary}}" class="form-control" name="salario" placeholder="salario">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>