<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    {{#each LINKS}}
                    <form action="/edit/{{id}}" method="POST">
                       <div class="form-group">
                           <input type="text"  value="{{name}}" class="form-control" name="name" placeholder="nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{salary}}" class="form-control" name="salary" placeholder="salario">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>